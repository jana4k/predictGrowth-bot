{
  "compilerOptions": {
    "target": "ES2020", // Or ES6, ES2020 is good for modern Node
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true // Good to have if you import JSON files
  },
  "include": ["src/**/*"], // Ensure it only includes your source files
  "exclude": ["node_modules", "**/*.spec.ts"]
}