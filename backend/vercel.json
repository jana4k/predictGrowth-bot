
{
    "version": 2,
    "builds": [
        {
            "src": "dist/src/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/src/knowledge_base.txt",
                    "dist/src/models/**" 
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "dist/index.js" 
        },
        { 
            "src": "/",
            "dest": "dist/index.js" 
        }
    ]
}